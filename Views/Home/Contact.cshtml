@model List<MovieProject.Models.Movie>

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@if (Model.Count() > 0)
{
    <table class="table">
    @foreach (Movie m in Model)
    {
        <thead>
            <tr>
                <th colspan="4">@m.Name</th>
            </tr>
        </thead>
        @foreach (var item in m.FilmItemCredits.Select(p => p.Person))
        {
            <tbody class="table-striped">
                <tr>
                    <th scope="row">Person</th>
                    <td>@item.FirstName</td>
                    <td>@item.Surname</td>
                    <td>@item.BirthDate</td>
                    @if(@item.DeathDate != null) {
                        <td>@item.DeathDate</td> 
                    } 
                </tr>
                
            </tbody>
        }
        @foreach (var item in m.FilmItemGenres.Select(g => g.Genre))
        {
            <tbody class="table-striped">
                <tr>
                    <th scope="row">Genre</th>
                    <td>@item.Name</td>
                </tr>
                
            </tbody>
        }
    }
    </table>
}


@model MovieProject.Models.Episode
@{
    ViewData["Title"] = "Edit: " + @Model.Name;
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="AirDate"></label>
        <div><span asp-validation-for="AirDate" class="text-danger"></span></div>
        <input type="date" asp-for="AirDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Runtime"></label>
        <div><span asp-validation-for="Runtime" class="text-danger"></span></div>
        <input type="number" asp-for="Runtime" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@{
    ViewData["Title"] = "Add " + ViewBag.Person.FirstName + " " + ViewBag.Person.Surname +  " to a new film item";
}
<h2 class="text-center">@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="AddCredit" method="post">
    <div class="form-group">
        <label class="col-md-2 control-label">Title:</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input id="Name" name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Character:</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input id="Character" name="Character" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Attribute:</label>
        <div class="col-md-8"> 
            <span class="text-danger"></span>
            <input id="Attribute" name="Attribute" class="form-control" />
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-action="Credits" class="btn btn-secondary">Cancel</a>
    </div>
</form>

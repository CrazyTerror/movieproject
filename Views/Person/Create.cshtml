@{
    ViewData["Title"] = "Create Person";
}
<h2>@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label class="col-md-2 control-label">First Name</label>
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-5">
                    <span class="text-danger"></span>
                    <input name="FirstName" class="form-control" />
                </div>
                <label class="col-md-2 control-label">Surname</label>
                <div class="col-md-5">
                    <span class="text-danger"></span>
                    <input name="Surname" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <select name="Gender" class="form-control" asp-items="@(Html.GetEnumSelectList<Gender>())"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birth Date</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="date" name="BirthDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Death Date</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="date" name="DeathDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birth Place</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="BirthPlace" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Poster</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="file" id="Poster" name="Poster" />
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

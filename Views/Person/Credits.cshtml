@model List<MovieProject.Models.FilmItemRelease>

@{
    ViewData["Title"] = "About Credits";
}
<h2>@ViewData["Title"]</h2> <a asp-action="AddCredit">Add new credit</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Film Item</th>
                <th scope="col">Character</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (FilmItemRelease f in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="@f.Discriminator" asp-action="Details" asp-route-slug="@f.Slug">
                            <img src="/images/filmitem/poster/@(f.Id).jpg" onerror="this.src='/images/filmitem/poster/template.jpg';this.onerror='';" alt="@f.Name"/>
                        </a>
                    </td>
                    <td>
                        @f.Character
                    </td>
                    <td>
                        <form asp-action="DeleteCredit" asp-route-id="@f.Id" method="post">
                            <a asp-action="EditCredit" asp-route-id="@f.Id" class="btn btn-sm btn-warning">
                                Edit
                            </a>
                            <input type="hidden" name="Id" value="@f.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="text-center">
    <a asp-controller="Person" asp-action="AddCredit" class="btn btn-primary">Add Credit</a>
    <a asp-action="Details" class="btn btn-secondary">Cancel</a>
</div>


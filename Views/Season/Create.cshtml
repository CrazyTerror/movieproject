@model MovieProject.Models.Series
@{
    ViewData["Title"] = Model.Name + " - Create Season";
}
<h2 class="text-center">@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Description</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <textarea name="Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Air Date</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="date" name="ReleaseDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Poster</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="file" id="Poster" name="Poster" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Banner</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="file" id="Banner" name="Banner" />
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-controller="Series" asp-action="Details" class="btn btn-secondary">Cancel</a>
    </div>
</form>

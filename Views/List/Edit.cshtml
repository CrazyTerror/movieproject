@model MovieProject.Models.List
@{
    ViewData["Title"] = @Model.Name;
}
<h2 class="text-center">Edit @ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Name"></label>
        <div class="col-md-8">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Description"></label>
        <div class="col-md-8">
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

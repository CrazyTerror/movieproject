@{
    ViewData["Title"] = "Add Person to " + ViewBag.FilmItem.Name;
}
<h2 class="text-center">@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="AddCredit" method="post">
    <div class="form-group">
        <label class="col-md-2 control-label">First Name</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="Firstname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Surname</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="Surname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Character</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="Character" class="form-control" />
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add Credit</button>
        <a asp-action="Credits" class="btn btn-secondary">Cancel</a>
    </div>
</form>

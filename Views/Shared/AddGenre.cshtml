@{
    ViewData["Title"] = ViewBag.FilmItem.Name + " - Add Genre";
}
<h2 class="text-center">@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="AddGenreToFilmItem" asp-controller="Genre" method="post">
    <input type="hidden" name="FilmItemId" value="@ViewBag.FilmItem.Id"/>
    <div class="form-group">
        <label class="col-md-2 control-label">Genre</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <select name="Genre" multiple="multiple" class="form-control" style="height: 500px;" asp-items="ViewBag.Genres"></select>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add Genre</button>
        <a asp-action="Genre" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@{
    ViewData["Title"] = "Add Person to " + ViewBag.Series.Name;
}
<h2>@ViewData["Title"]</h2>

<form asp-action="AddCredit" method="post">
    <div class="form-group">
        <label>Firstname</label>
        <div><span class="text-danger"></span></div>
        <input name="Firstname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Surname</label>
        <div><span class="text-danger"></span></div>
        <input name="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Character</label>
        <div><span class="text-danger"></span></div>
        <input name="Character" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add Credit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

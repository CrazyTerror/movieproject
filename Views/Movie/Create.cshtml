@{
    ViewData["Title"] = "Create Movie";
}
<h2>@ViewData["Title"]</h2>

<form class="form-horizontal" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Description</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <textarea name="Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Runtime</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="number" name="Runtime" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Release Date</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="date" name="ReleaseDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Budget</label>
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-5">
                    <span class="text-danger"></span>
                    <input type="number" name="Budget" class="form-control" />
                </div>
                <label class="col-md-2 control-label">Revenue</label>
                <div class="col-md-5">
                    <span class="text-danger"></span>
                    <input type="number" name="Revenue" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Status</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <select name="Status" class="form-control" asp-items="@(Html.GetEnumSelectList<Status>())"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Poster</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="file" id="Poster" name="Poster" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Banner</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <input type="file" id="Banner" name="Banner" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Genre</label>
        <div class="col-md-8">
            <span class="text-danger"></span>
            <select name="Genre" multiple="multiple" class="form-control" asp-items="ViewBag.Genres"></select>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

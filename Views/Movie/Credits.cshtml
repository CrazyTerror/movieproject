@model MovieProject.Models.Movie
@using MovieProject.Infrastructure;

@{
    ViewData["Title"] = "About Movies";
}

<div class="row">
    <img src="/images/filmitem/@(Model.Id).jpg" onerror="this.src='/images/filmitem/template.jpg';this.onerror='';" alt="@Model.Name" width="100%">
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Person</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.FilmItemCredits.Select(p => p.Person))
            {
                <tr>
                    <td>
                        <text>@person.FirstName @person.Surname</text>
                    </td>
                    <td>
                        <form asp-action="Credits" asp-route-id="@person.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a asp-action="AddCredit" class="btn btn-primary">Add Person</a>
    </div>
</div>